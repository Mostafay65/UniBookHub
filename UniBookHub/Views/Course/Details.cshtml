@model UniBookHub.Models.Course

@{
    ViewData["Title"] = "Details";
    if (User.IsInRole("Student"))
    {
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
    }
    else Layout = "~/Views/Shared/_CollegeLayout.cshtml";
}


    <!-- content-header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Course Details</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->
    <!-- content -->

<section class="content">
    <div class="container-fluid">
        <div class="container card p-3">
            <div class="row">
                <dt class="col-sm-2 text-uppercase">Code</dt>
                <dd class="col-sm-10">@Model.Code</dd>
                <dt class="col-sm-2 text-uppercase">Title</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2 text-uppercase">Instructor</dt>
                <dd class="col-sm-10">Mai Ramadan</dd>
                @if (!User.IsInRole("Student"))
                {
                    <dt class="col-sm-2 text-uppercase">Level</dt>
                    <dd class="col-sm-10">@Model.LevelNumber</dd>
                }
                <dt class="col-sm-2 text-uppercase">description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
                @if (User.IsInRole("Student"))
                {
                    <a href="~/Books/@Model.Book" download="@Model.Book" class="btn btn-primary" style="width: fit-content">Download Book PDF</a>
                }
            </div>
        </div>
    </div>
    <div class="ml-5">
        @if (User.IsInRole("Student"))
        {
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success">Back to List</a>
        }
        else
        {
            <a asp-action="Details" asp-controller="College" asp-route-CollegeId="@Model.CollegeId" asp-route-LevelId="@Model.LevelNumber" class="btn btn-outline-success">Back to List</a>
        }
    </div>
</section>
<!-- /.content-wrapper -->