<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UniBookHub Collage Courses</title>

    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/UniBookHub.min.css">
    <style>
        .table th{
            border-top: none;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" style="font-size: 20px" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i> UniBookHub</a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      
      <li class="nav-item">
        <a class="nav-link" data-widget="fullscreen" href="#" role="button">
          <i class="fa fa-expand-arrows-alt"></i>
        </a>
      </li>
      
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-controller="Home" asp-action="Index" target="_blank" class="brand-link">
      <img src="~/images/logo.png" alt="UniBookHub Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">UniBookHub</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="~/images/admin.png" class="img-circle elevation-2" alt="Student Image">
        </div>
        <div class="info">
          <a class="d-block">Mostafa Elsawy</a>
        </div>
      </div>
      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index"  class="nav-link">
                    <i class="fa fa-house nav-icon"></i>
                    <p>Dashboard</p>
                </a>
            </li>
            <li class="nav-item menu-open">
            <a href="#" class="nav-link active">
              <i class="nav-icon fa fa-window-restore"></i>
              <p>
                @TempData["College"].ToString()
                <i class="right fa fa-angle-left"></i>
              </p>
            </a>
              <ul class="nav nav-treeview">
                @for (int i = 1; i <= (int)TempData["Levels"]; i++)
                {
                  string active = (int)TempData["Level"] == i ? "active" : " ";
                  <li class="nav-item ">
                    <a asp-action="Details" asp-controller="College" asp-route-LevelId="@i" asp-route-CollegeId="@TempData["CollegeId"].ToString()" class="nav-link @active">
                      <i class="fa fa-share nav-icon"></i>
                      <p>Level @i</p>
                    </a>
                  </li>  
                }
              </ul>
          </li>
            
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <div class="content-wrapper pb-3">
    @RenderBody()
  </div>
  <!-- Main Footer -->
  <footer class="main-footer text-center">
    <strong>Copyright &copy; 2023-2024 <a href="#">UniBookHub</a>.</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->


<script src="~/js/JQuery-3.3.1.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/UniBookHub.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>
