@model UniBookHub.Models.ApplicationUser?

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Delete User</h1>
                </div>
            </div>
        </div>
    </div>

<section class="content">
    <div class="container-fluid">
        <div class="card p-3">
            <h3 style="color: rgb(246, 43, 43);">Are you sure you want to delete this User?</h3>
            <div>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                        
                <form asp-action="Delete" asp-route-OldRole="@TempData["Role"].ToString()">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> | 
                    <a asp-action="UsersInRole" asp-route-Role="@(TempData["Role"].ToString())"class="btn btn-outline-success">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</section>
