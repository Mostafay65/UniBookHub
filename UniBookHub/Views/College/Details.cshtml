@model List<Course>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_CollegeLayout.cshtml";
}


<!-- content-header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@TempData["College"].ToString()</h1>
                </div>
                <div class="col-sm-6">
                    <a asp-action="Create" asp-controller="Course" asp-route-LevelId="@TempData["Level"].ToString()" asp-route-CollegeId="@TempData["CollegeId"].ToString()" class="btn btn-primary  float-sm-right">Add Course</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->
    <!-- content -->
        
<section class="content">
    <div class="container-fluid">
        <div class="card p-3">
            <table class="table table-hover text-center">
                <thead>
                <tr>
                    <th colspan="2">Level @TempData["Level"].ToString()</th>
                </tr>
                </thead>
                <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Operation</th>
                </tr>
                </thead>
                <tbody>
                @foreach (Course course in Model)
                {
                    <tr>
                        <td>@course.Name</td>
                        <td>
                            <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.ID" class="btn btn-warning">Edit</a> |
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.ID" class="btn btn-primary">Details</a> |
                            <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.ID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                    
                </tbody>
            </table>
        </div>
    </div>
</section>
